<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals="true"
        colors="true"
        stopOnFailure="false"
        bootstrap="vendor/autoload.php">

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>

    <testsuite name="TravisEncrypter Test Suite">
        <directory suffix=".php">./tests</directory>
    </testsuite>

</phpunit>
